      <bloque id="s1" tipo="encabezado" titulo="Sección 1">
        <version id_norma="BOE-A-2020-6921" fecha_publicacion="20200630" fecha_vigencia="20200701">
          <p class="seccion">Sección 1.ª Normas comunes a todas las ayudas</p>
