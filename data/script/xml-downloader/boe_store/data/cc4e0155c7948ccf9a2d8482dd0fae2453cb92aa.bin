        <version id_norma="BOE-A-2000-24359" fecha_publicacion="20001230" fecha_vigencia="20001231">
          <p class="parrafo_2">Madrid, 20 de diciembre de 2000.</p>
          <p class="firma_rey">TRILLO-FIGUEROA Y MARTÍNEZ-CONDE</p>
        </version>
      </bloque>
