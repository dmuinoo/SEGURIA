                <td>
                  <p class="cuerpo_tabla_centro">0,2</p>
                </td>
                <td>
                  <p class="cuerpo_tabla_centro">d ≤ 50 kg</p>
                </td>
              </tr>
              <tr>
                <td>
                  <p class="cuerpo_tabla_centro">0,5</p>
                </td>
                <td>
                  <p class="cuerpo_tabla_centro">d ≤ 100 kg</p>
                </td>
