        <version id_norma="BOE-A-1997-14854" fecha_publicacion="19970704" fecha_vigencia="19970705">
          <p class="parrafo_2">Madrid, 23 de junio de 1997.</p>
          <p class="firma_rey">ARIAS-SALGADO MONTALVO</p>
        </version>
      </bloque>
