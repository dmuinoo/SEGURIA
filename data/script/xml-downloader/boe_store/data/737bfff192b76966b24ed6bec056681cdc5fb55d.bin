      <bloque id="ci" tipo="encabezado" titulo="CAPÍTULO I">
        <version id_norma="BOE-A-2020-15602" fecha_publicacion="20201204" fecha_vigencia="20210101">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">Contenido de la información financiera pública</p>
