      <bloque id="ci" tipo="encabezado" titulo="CAPÍTULO I">
        <version id_norma="BOE-A-2021-909" fecha_publicacion="20201231" fecha_vigencia="20210101">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">Naturaleza y fines de la universidad</p>
        </version>
