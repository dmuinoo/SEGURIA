      <bloque id="ani" tipo="encabezado" titulo="ANEXO I">
        <version id_norma="BOE-A-1999-11707" fecha_publicacion="19990417" fecha_vigencia="19990418">
          <p class="anexo_num">ANEXO I</p>
          <p class="anexo_tit">Matriz de ordenación del suelo rústico</p>
          <table class="tabla_ancha">
            <tr>
              <td colspan="2" rowspan="2">
</td>
              <td colspan="3">
                <p class="cabeza_tabla">Sector primario</p>
              </td>
              <td colspan="2">
