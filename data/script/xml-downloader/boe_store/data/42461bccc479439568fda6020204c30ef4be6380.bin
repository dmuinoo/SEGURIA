        <version id_norma="BOE-A-2022-4136" fecha_publicacion="20220316" fecha_vigencia="20220317">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">Disposiciones generales</p>
        </version>
