      <bloque id="ci" tipo="encabezado" titulo="CAPÍTULO I">
        <version id_norma="BOE-A-2021-21668" fecha_publicacion="20211110" fecha_vigencia="20211111">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">El Fondo de Cooperación Municipal de la Comunitat Valenciana</p>
