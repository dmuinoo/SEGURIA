        <version id_norma="BOE-A-2010-5218" fecha_publicacion="20100319" fecha_vigencia="20100320">
          <p class="titulo_num">TÍTULO I</p>
          <p class="titulo_tit">Del derecho de acceso a la vivienda protegida</p>
        </version>
