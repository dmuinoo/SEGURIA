      <bloque id="a52" tipo="precepto" titulo="Artículo 52">
        <version id_norma="BOE-A-2013-90001" fecha_publicacion="20130411" fecha_vigencia="20130412">
          <p class="articulo">Artículo 52. Infracciones.</p>
