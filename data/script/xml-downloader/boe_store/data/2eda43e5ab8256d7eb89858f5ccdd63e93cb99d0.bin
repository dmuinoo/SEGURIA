        <version id_norma="BOE-A-2003-11048" fecha_publicacion="20030408" fecha_vigencia="20030428">
          <p class="parrafo_2">Toledo, 1 de abril de 2003.</p>
          <p class="firma_ministro">JOSÉ BONO MARTÍNEZ,</p>
          <p class="firma_ministro">Presidente</p>
        </version>
      </bloque>
