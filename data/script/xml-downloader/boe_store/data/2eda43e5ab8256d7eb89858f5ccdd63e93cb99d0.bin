      <bloque id="ci-5" tipo="encabezado" titulo="CAPÍTULO I">
        <version id_norma="BOE-A-2003-11048" fecha_publicacion="20030408" fecha_vigencia="20030428">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">Vigilancia e Inspección</p>
        </version>
