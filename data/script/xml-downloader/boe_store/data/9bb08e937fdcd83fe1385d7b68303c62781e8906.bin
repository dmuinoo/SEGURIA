        <version id_norma="BOE-A-1999-652" fecha_publicacion="19981202" fecha_vigencia="19981222">
          <p class="capitulo_num">CAPÍTULO II</p>
          <p class="capitulo_tit">Protección de los Bienes de Interés Cultural</p>
        </version>
