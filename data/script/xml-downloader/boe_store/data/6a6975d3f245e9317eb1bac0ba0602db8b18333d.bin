      <bloque id="ciii-3" tipo="encabezado" titulo="CAPÍTULO III">
        <version id_norma="BOE-A-1998-19183" fecha_publicacion="19980808" fecha_vigencia="19980809">
          <p class="capitulo_num">CAPÍTULO III</p>
          <p class="capitulo_tit">Cargaderos</p>
          <blockquote>
            <p class="nota_pie">Se modifica por el art. 1 del Real Decreto 1562/1998, de 17 de julio. <a class="refPost">Ref. BOE-A-1998-19183</a>.</p>
          </blockquote>
        </version>
