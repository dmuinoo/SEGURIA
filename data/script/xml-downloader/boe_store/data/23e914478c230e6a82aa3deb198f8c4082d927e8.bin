      <bloque id="s2" tipo="encabezado" titulo="Sección 2">
        <version id_norma="BOE-A-2013-9129" fecha_publicacion="20130730" fecha_vigencia="20130819">
          <p class="seccion">Sección 2.ª Sanciones disciplinarias</p>
