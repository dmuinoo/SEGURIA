        <version id_norma="BOE-A-2014-3376" fecha_publicacion="20140329" fecha_vigencia="20140330">
          <p class="capitulo_num">CAPÍTULO II</p>
          <p class="capitulo_tit">Procedimiento de cálculo del coste de producción de energía eléctrica</p>
        </version>
