      <bloque id="s1" tipo="encabezado" titulo="Sección 1">
        <version id_norma="BOE-A-2010-6737" fecha_publicacion="20100429" fecha_vigencia="20100430">
          <p class="seccion">Sección 1.ª Medidas normales de diligencia debida</p>
        </version>
