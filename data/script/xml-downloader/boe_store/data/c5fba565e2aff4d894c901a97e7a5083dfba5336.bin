            <thead>
              <tr>
                <th class="cabeza_tabla">Norma</th>
                <th class="cabeza_tabla">Clasificación</th>
              </tr>
            </thead>
            <colgroup>
              <col width="24%"/>
              <col width="24%"/>
            </colgroup>
            <tbody>
              <tr>
                <td class="cuerpo_tabla_izq">EN 149:2001</td>
                <td class="cuerpo_tabla_izq">FFP2</td>
              </tr>
              <tr>
                <td class="cuerpo_tabla_izq">NIOSH-42CFR84</td>
                <td class="cuerpo_tabla_izq">N95, R95, P95</td>
              </tr>
              <tr>
                <td class="cuerpo_tabla_izq">GB2626-2006</td>
                <td class="cuerpo_tabla_izq">KN95</td>
              </tr>
              <tr>
                <td class="cuerpo_tabla_izq">AS/NZ 1716:2012</td>
