      <bloque id="ci-5" tipo="encabezado" titulo="CAPÍTULO I">
        <version id_norma="BOE-A-2023-26452" fecha_publicacion="20231228" fecha_vigencia="20231229">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">Medidas fiscales</p>
