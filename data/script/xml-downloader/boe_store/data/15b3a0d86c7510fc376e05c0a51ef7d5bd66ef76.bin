      <bloque id="in-7" tipo="encabezado" titulo="INSTRUCCIÓN EP-7">
        <version id_norma="BOE-A-2021-16407" fecha_publicacion="20211011" fecha_vigencia="20220102">
          <p class="titulo_num">INSTRUCCIÓN TÉCNICA COMPLEMENTARIA ITC EP–7</p>
