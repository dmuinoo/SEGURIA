      <bloque id="ai-3" tipo="encabezado" titulo="ANEXO III">
        <version id_norma="BOE-A-2021-9632" fecha_publicacion="20210610" fecha_vigencia="20210611">
          <p class="anexo_num">ANEXO III</p>
          <p class="anexo_tit">Relación de asignaturas susceptibles de ser impartidas a distancia</p>
