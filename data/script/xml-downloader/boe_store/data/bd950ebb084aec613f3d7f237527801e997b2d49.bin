      <bloque id="tpreliminar" tipo="encabezado" titulo="TÍTULO PRELIMINAR">
        <version id_norma="BOE-A-2011-20036" fecha_publicacion="19980327" fecha_vigencia="19980627">
          <p class="titulo_num">TÍTULO PRELIMINAR</p>
          <p class="titulo_tit">Objeto de la Ley</p>
        </version>
