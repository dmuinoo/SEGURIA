      <bloque id="ci-2" tipo="encabezado" titulo="CAPÍTULO I">
        <version id_norma="BOE-A-2012-2011" fecha_publicacion="19930719" fecha_vigencia="19930818">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">Clases de Cooperativas</p>
        </version>
      </bloque>
      <bloque id="sprimera-2" tipo="encabezado" titulo="Sección Primera">
        <version id_norma="BOE-A-2012-2011" fecha_publicacion="19930719" fecha_vigencia="19930818">
          <p class="seccion">Sección Primera. Normas comunes</p>
        </version>
