      <bloque id="ci-5" tipo="encabezado" titulo="CAPÍTULO I">
        <version id_norma="BOE-A-1999-10364" fecha_publicacion="19990326" fecha_vigencia="19990326">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">La demanda turística</p>
