        <version id_norma="BOE-A-2001-6008" fecha_publicacion="20010328" fecha_vigencia="20010417">
          <p class="titulo_num">TÍTULO PRELIMINAR</p>
          <p class="titulo_tit">Disposiciones generales</p>
        </version>
