      <bloque id="ci" tipo="encabezado" titulo="CAPÍTULO I">
        <version id_norma="BOE-A-2023-11337" fecha_publicacion="20230425" fecha_vigencia="20230426">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">Competencias y funciones</p>
        </version>
