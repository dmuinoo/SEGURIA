        <version id_norma="BOE-A-2020-5567" fecha_publicacion="20200602" fecha_vigencia="20200603">
          <p class="parrafo_2">Madrid, 1 de junio de 2020.–El Ministro de Sanidad, Salvador Illa Roca.</p>
        </version>
      </bloque>
