      <bloque id="ci-6" tipo="encabezado" titulo="CAPITULO III">
        <version id_norma="BOE-A-2018-5059" fecha_publicacion="20180414" fecha_vigencia="20180415">
          <p class="capitulo_num">CAPÍTULO III</p>
          <p class="capitulo_tit">Organización de las entidades de gestión</p>
          <blockquote>
