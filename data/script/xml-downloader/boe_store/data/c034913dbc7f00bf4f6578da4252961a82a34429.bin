      <bloque id="ani" tipo="encabezado" titulo="ANEXO I">
        <version id_norma="BOE-A-2002-694" fecha_publicacion="20020112" fecha_vigencia="20020113">
          <p class="anexo_num">ANEXO I</p>
          <p class="anexo_tit">Modelo de certificación de estaciones en proyecto</p>
