      <bloque id="ci" tipo="encabezado" titulo="CAPÍTULO I">
        <version id_norma="BOE-A-2007-18779" fecha_publicacion="20071018" fecha_vigencia="20071107">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">Creación de museos y colecciones museográficas</p>
        </version>
