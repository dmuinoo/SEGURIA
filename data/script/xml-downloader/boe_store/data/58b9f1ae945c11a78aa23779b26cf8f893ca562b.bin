          <p class="anexo_tit">Estatuto del Ballet Nacional de España</p>
        </version>
      </bloque>
      <bloque id="ci" tipo="encabezado" titulo="CAPITULO I">
        <version id_norma="BOE-A-2010-18375" fecha_publicacion="20101130" fecha_vigencia="20101201">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">Disposiciones generales</p>
        </version>
