              <tr>
                <td class="cuerpo_tabla_centro">100 &gt; Q ≥ 50</td>
                <td class="cuerpo_tabla_centro">0,20</td>
              </tr>
              <tr>
                <td class="cuerpo_tabla_centro">50 &gt; Q ≥ 5</td>
                <td class="cuerpo_tabla_centro">0,10</td>
              </tr>
              <tr>
                <td class="cuerpo_tabla_centro">5 &gt; Q</td>
                <td class="cuerpo_tabla_centro">0,05</td>
              </tr>
