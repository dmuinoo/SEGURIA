              <tr>
                <td class="cuerpo_tabla_centro">20.000 &gt; Q ≥ 10.000</td>
                <td class="cuerpo_tabla_centro">0,90</td>
              </tr>
              <tr>
                <td class="cuerpo_tabla_centro">10.000 &gt; Q ≥ 7.500</td>
                <td class="cuerpo_tabla_centro">0,85</td>
              </tr>
              <tr>
                <td class="cuerpo_tabla_centro">7.500 &gt; Q ≥ 5.000</td>
                <td class="cuerpo_tabla_centro">0,80</td>
              </tr>
              <tr>
                <td class="cuerpo_tabla_centro">5.000 &gt; Q ≥ 2.500</td>
                <td class="cuerpo_tabla_centro">0,75</td>
              </tr>
              <tr>
                <td class="cuerpo_tabla_centro">2.500  &gt; Q ≥ 1.000</td>
                <td class="cuerpo_tabla_centro">0,70</td>
              </tr>
              <tr>
                <td class="cuerpo_tabla_centro">1.000 &gt; Q ≥ 500</td>
                <td class="cuerpo_tabla_centro">0,65</td>
