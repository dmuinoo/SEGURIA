      <bloque id="ci" tipo="encabezado" titulo="CAPÍTULO I">
        <version id_norma="BOE-A-2007-10022" fecha_publicacion="20070417" fecha_vigencia="20070418">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">Objeto y conceptos generales</p>
        </version>
