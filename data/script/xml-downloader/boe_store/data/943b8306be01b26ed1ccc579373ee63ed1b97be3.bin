      <bloque id="ci" tipo="encabezado" titulo="CAPÍTULO I">
        <version id_norma="BOE-A-2011-17718" fecha_publicacion="20111026" fecha_vigencia="20111115">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">Del Banco de Tierras de Galicia</p>
        </version>
