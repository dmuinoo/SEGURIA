      <bloque id="st" tipo="encabezado" titulo="Sección tercera">
        <version id_norma="BOE-A-2020-11363" fecha_publicacion="20200921" fecha_vigencia="20200922">
          <p class="seccion">Sección tercera. Régimen de control y régimen sancionador</p>
