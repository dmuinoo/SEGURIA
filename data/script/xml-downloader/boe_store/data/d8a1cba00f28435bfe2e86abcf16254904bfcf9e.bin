      <bloque id="ci" tipo="encabezado" titulo="CAPÍTULO I">
        <version id_norma="BOE-A-2006-8213" fecha_publicacion="20060410" fecha_vigencia="20060710">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">Proyección y construcción de infraestructuras ferroviarias</p>
        </version>
