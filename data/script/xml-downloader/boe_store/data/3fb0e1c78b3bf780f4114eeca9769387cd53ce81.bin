        <version id_norma="BOE-A-2016-11577" fecha_publicacion="20161206" fecha_vigencia="20161207">
          <p class="anexo_num">ANEXO V</p>
          <p class="anexo_tit">Criterios de priorización</p>
          <table class="ning_n_estilo_de_tabla">
            <colgroup>
              <col class="row_column_14"/>
