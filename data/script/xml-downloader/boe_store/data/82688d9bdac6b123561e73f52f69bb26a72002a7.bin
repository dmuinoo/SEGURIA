              <tr>
                <td class="cuerpo_tabla_izq" colspan="1" rowspan="1">De hasta 10 tm.</td>
                <td class="cuerpo_tabla_centro" colspan="1" rowspan="1">+ 25</td>
                <td class="cuerpo_tabla_centro" colspan="1" rowspan="1">+ 50</td>
