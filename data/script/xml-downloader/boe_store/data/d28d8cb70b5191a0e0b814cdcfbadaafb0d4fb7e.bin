      <bloque id="cu" tipo="encabezado" titulo="CAPÍTULO ÚNICO">
        <version id_norma="BOE-A-1999-12089" fecha_publicacion="19990323" fecha_vigencia="19990323">
          <p class="capitulo">CAPÍTULO ÚNICO</p>
