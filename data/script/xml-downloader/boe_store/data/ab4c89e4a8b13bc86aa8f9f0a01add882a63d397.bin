        <version id_norma="BOE-A-2008-1185" fecha_publicacion="20071226" fecha_vigencia="20080115">
          <p class="titulo_num">TÍTULO II</p>
          <p class="titulo_tit">La Agencia Pública Empresarial de la Radio y Televisión de Andalucía (RTVA)</p>
        </version>
