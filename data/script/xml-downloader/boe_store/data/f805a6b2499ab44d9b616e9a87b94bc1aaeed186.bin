      <bloque id="s1" tipo="encabezado" titulo="Sección 1">
        <version id_norma="BOE-A-2002-20381" fecha_publicacion="20021012" fecha_vigencia="20021101">
          <p class="seccion">Sección 1.ª De las infracciones</p>
        </version>
