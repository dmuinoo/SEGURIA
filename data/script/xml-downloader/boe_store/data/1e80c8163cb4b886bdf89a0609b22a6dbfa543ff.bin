      <bloque id="ci-2" tipo="encabezado" titulo="CAPÍTULO I">
        <version id_norma="BOE-A-1999-15799" fecha_publicacion="19990513" fecha_vigencia="19990613">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">Contenido y alcance</p>
        </version>
