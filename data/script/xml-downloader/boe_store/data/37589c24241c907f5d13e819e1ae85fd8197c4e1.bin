        <version id_norma="BOE-A-2023-7421" fecha_publicacion="20230314" fecha_vigencia="20230315">
          <p class="capitulo_num">CAPÍTULO 2</p>
          <p class="capitulo_tit">De los centros y casas de acogida y de las colonias felinas</p>
        </version>
