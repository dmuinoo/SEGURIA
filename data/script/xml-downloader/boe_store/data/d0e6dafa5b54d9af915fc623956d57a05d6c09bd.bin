      <bloque id="ci-20" tipo="encabezado" titulo="CAPÍTULO I">
        <version id_norma="BOE-A-2019-7224" fecha_publicacion="20190417" fecha_vigencia="20190507">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">Disposiciones generales</p>
        </version>
