      <bloque id="fi" tipo="firma" titulo="[firma]">
        <version id_norma="BOE-A-1999-16941" fecha_publicacion="19990806" fecha_vigencia="19990807">
          <p class="parrafo_2">Dado en Madrid a 16 de julio de 1999.</p>
          <p class="firma_rey">JUAN CARLOS R.</p>
          <p class="firma_ministro">El Ministro de Fomento,</p>
          <p class="firma_ministro">RAFAEL ARIAS-SALGADO MONTALVO</p>
        </version>
