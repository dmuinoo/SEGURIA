              <tr>
                <td>
                  <p class="cuerpo_tabla_centro">B, C,D</p>
                  <p class="cuerpo_tabla_centro">B, C,D</p>
                </td>
                <td>
                  <p class="cuerpo_tabla_centro">N &lt; 400</p>
                  <p class="cuerpo_tabla_centro">N ≥400</p>
                </td>
                <td>
                  <p class="cuerpo_tabla_centro">≤ 1,0</p>
                  <p class="cuerpo_tabla_centro">≤ 0,5</p>
                </td>
