        <version id_norma="BOE-A-2007-14050" fecha_publicacion="20070721" fecha_vigencia="20070722">
          <p class="anexo_num">ANEXO II</p>
          <p class="anexo_tit">MATERIAS DE EDUCACIÓN SECUNDARIA OBLIGATORIA</p>
        </version>
