      <bloque id="an1" tipo="encabezado" titulo="ANEXO 1">
        <version id_norma="BOE-A-2003-2517" fecha_publicacion="20030207" fecha_vigencia="20030208">
          <p class="anexo_num">ANEXO 1</p>
          <p class="anexo_tit">MODELO DE INFORMACIÓN FINANCIERO-CONTABLE TRIMESTRAL A REMITIR POR LOS MIEMBROS INDUSTRIALES A LA CNMV</p>
          <p class="imagen">
            <img src="/datos/imagenes/disp/2003/33/02517_001.png"/>
          </p>
          <p class="imagen">
            <img src="/datos/imagenes/disp/2003/33/02517_002.png"/>
