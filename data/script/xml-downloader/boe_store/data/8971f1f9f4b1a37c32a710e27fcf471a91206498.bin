      <bloque id="cunico" tipo="encabezado" titulo="CAPÍTULO ÚNICO">
        <version id_norma="BOE-A-2009-7698" fecha_publicacion="20090416" fecha_vigencia="20090516">
          <p class="capitulo_num">CAPÍTULO ÚNICO</p>
          <p class="capitulo_tit">Disposiciones generales</p>
        </version>
