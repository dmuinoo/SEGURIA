      <bloque id="cii-5" tipo="encabezado" titulo="CAPÍTULO II">
        <version id_norma="BOE-A-2009-7698" fecha_publicacion="20090416" fecha_vigencia="20090516">
          <p class="capitulo_num">CAPÍTULO II</p>
          <p class="capitulo_tit">Industrias forestales</p>
        </version>
