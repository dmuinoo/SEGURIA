      <bloque id="ci" tipo="encabezado" titulo="CAPÍTULO I">
        <version id_norma="BOE-A-2000-24368" fecha_publicacion="20001230" fecha_vigencia="20010101">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">Alcance de las franquicias y exenciones</p>
        </version>
