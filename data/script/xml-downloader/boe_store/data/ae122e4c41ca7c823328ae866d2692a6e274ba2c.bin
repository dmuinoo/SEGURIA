      <bloque id="ai-4" tipo="encabezado" titulo="ANEXO III.b)">
        <version id_norma="BOE-A-2023-16814" fecha_publicacion="20230721" fecha_vigencia="20230722">
          <p class="anexo_num">ANEXO III.b</p>
