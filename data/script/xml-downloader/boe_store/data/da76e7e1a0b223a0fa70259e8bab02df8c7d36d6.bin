              <tr>
                <td>
                  <p class="cuerpo_tabla_centro">ANTONI SUBIRÀ I CLAUS,</p>
                  <p class="cuerpo_tabla_centro">Consejero de Industria, Comercio y Turismo</p>
                </td>
                <td>
                  <p class="cuerpo_tabla_centro">JORDI PUJOL,</p>
                  <p class="cuerpo_tabla_centro">Presidente</p>
                </td>
              </tr>
            </tbody>
          </table>
        </version>
      </bloque>
