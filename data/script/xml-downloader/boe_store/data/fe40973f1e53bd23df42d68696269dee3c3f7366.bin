        <version id_norma="BOE-A-1999-21980" fecha_publicacion="19991113" fecha_vigencia="19991114">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">Objeto y ámbito de aplicación de la Ley</p>
        </version>
