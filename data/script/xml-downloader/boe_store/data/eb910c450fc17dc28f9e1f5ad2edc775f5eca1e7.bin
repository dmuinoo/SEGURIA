      <bloque id="ci" tipo="encabezado" titulo="CAPÍTULO I">
        <version id_norma="BOE-A-2009-1173" fecha_publicacion="20081230" fecha_vigencia="20081231">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">Órganos de gobierno</p>
