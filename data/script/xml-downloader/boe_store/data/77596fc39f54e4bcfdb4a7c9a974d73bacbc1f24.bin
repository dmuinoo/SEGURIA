      <bloque id="an" tipo="encabezado" titulo="ANEXO">
        <version id_norma="BOE-A-2018-4103" fecha_publicacion="20180323" fecha_vigencia="20180324">
          <p class="anexo_num">ANEXO</p>
          <p class="anexo_tit">Estatutos de la corporación de derecho público Consejo Regulador de la Denominación de Origen Protegida «Guijuelo»</p>
        </version>
