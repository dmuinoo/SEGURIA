      <bloque id="ci" tipo="encabezado" titulo="CAPÍTULO I">
        <version id_norma="BOE-A-2020-3782" fecha_publicacion="20200309" fecha_vigencia="20200509">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">Objetivos y elaboración</p>
        </version>
