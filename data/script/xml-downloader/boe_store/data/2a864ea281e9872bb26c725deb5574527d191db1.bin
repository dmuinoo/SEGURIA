      <bloque id="s1" tipo="encabezado" titulo="Sección 1">
        <version id_norma="BOE-A-2013-8086" fecha_publicacion="20130712" fecha_vigencia="20131012">
          <p class="seccion">Sección 1.ª Condiciones generales</p>
