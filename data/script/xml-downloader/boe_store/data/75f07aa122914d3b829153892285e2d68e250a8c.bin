        <version id_norma="BOE-A-2016-1238" fecha_publicacion="20160209" fecha_vigencia="20160210">
          <p class="capitulo_num">CAPÍTULO 1</p>
          <p class="capitulo_tit">Definiciones y ámbito de aplicación</p>
        </version>
