      <bloque id="ai-2" tipo="encabezado" titulo="ANEXO II">
        <version id_norma="BOE-A-2006-21506" fecha_publicacion="20061209" fecha_vigencia="20061210">
          <p class="anexo_num">ANEXO II</p>
          <p class="anexo_tit">Boletín de identificación de contadores estáticos y de muestras de lotes</p>
          <p class="imagen">
            <img src="/datos/imagenes/disp/2006/294/21506_001.png" height="947" width="720"/>
