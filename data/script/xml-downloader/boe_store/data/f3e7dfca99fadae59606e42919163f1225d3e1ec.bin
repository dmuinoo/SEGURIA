        <version id_norma="BOE-A-2005-20235" fecha_publicacion="20051123" fecha_vigencia="20051213">
          <p class="titulo_num">TÍTULO II</p>
          <p class="titulo_tit">Régimen de usos y actividades</p>
        </version>
