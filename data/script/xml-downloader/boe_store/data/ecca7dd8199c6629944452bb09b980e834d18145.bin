              <tr>
                <td class="cuerpo_tabla_izq">≤ 1M</td>
                <td class="cuerpo_tabla_centro"> 10.000</td>
              </tr>
              <tr>
                <td class="cuerpo_tabla_izq">&gt; 1M ≤ 2M</td>
                <td class="cuerpo_tabla_centro"> 20.000</td>
              </tr>
              <tr>
