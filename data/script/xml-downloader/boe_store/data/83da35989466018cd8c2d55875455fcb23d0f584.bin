        <version id_norma="BOE-A-2014-2999" fecha_publicacion="20140130" fecha_vigencia="20140131">
          <p class="capitulo_num">CAPÍTULO II</p>
          <p class="capitulo_tit">Modificaciones legislativas en materia de ordenación ambiental</p>
