      <bloque id="ci" tipo="encabezado" titulo="CAPÍTULO I">
        <version id_norma="BOE-A-2015-9527" fecha_publicacion="20150902" fecha_vigencia="20160719">
          <p class="capitulo_num">CAPÍTULO I</p>
