        <version id_norma="BOE-A-2020-6107" fecha_publicacion="20200615" fecha_vigencia="20200616">
          <p class="parrafo_2">Madrid, 13 junio de 2020.–El Ministro de Sanidad, Salvador Illa Roca.</p>
        </version>
      </bloque>
