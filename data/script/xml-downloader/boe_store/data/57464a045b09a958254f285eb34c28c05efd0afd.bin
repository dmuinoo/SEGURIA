        <version id_norma="BOE-A-2013-12913" fecha_publicacion="20131211" fecha_vigencia="20131212">
          <p class="titulo_num">TÍTULO I</p>
          <p class="titulo_tit">Principios y disposiciones generales</p>
        </version>
