      <bloque id="s2" tipo="encabezado" titulo="Sección 2">
        <version id_norma="BOE-A-2000-15424" fecha_publicacion="20000706" fecha_vigencia="20000707">
          <p class="seccion">Sección 2.ª Composición</p>
        </version>
