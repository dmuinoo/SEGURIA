      <bloque id="s3" tipo="encabezado" titulo="Sección 3">
        <version id_norma="BOE-A-2000-15424" fecha_publicacion="20000706" fecha_vigencia="20000707">
          <p class="seccion">Sección 3.ª Elección, cese y renovación de los Consejeros generales</p>
        </version>
