      <bloque id="s3-4" tipo="encabezado" titulo="SECCIÓN 3">
        <version id_norma="BOE-A-2003-23186" fecha_publicacion="20031218" fecha_vigencia="20040701">
          <p class="seccion">Sección 3.ª La prescripción</p>
        </version>
