          <p class="capitulo_tit">Rehabilitación y vivienda</p>
        </version>
        <version id_norma="BOE-A-2013-6938" fecha_publicacion="20130627" fecha_vigencia="20130628">
          <p class="capitulo_num">CAPÍTULO IV</p>
          <p class="capitulo_tit">Rehabilitación y vivienda</p>
