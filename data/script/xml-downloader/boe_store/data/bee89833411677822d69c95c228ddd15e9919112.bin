        <version id_norma="BOE-A-2015-4781" fecha_publicacion="20150501" fecha_vigencia="20150502">
          <p class="parrafo_2">Dado en Madrid, el 30 de abril de 2015.</p>
          <p class="firma_rey">FELIPE R.</p>
          <p class="firma_ministro">El Ministro de Defensa,</p>
          <p class="firma_ministro">PEDRO MORENÉS EULATE</p>
        </version>
      </bloque>
