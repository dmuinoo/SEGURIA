      <bloque id="s1-2" tipo="encabezado" titulo="SECCIÓN 1">
        <version id_norma="BOE-A-2004-3453" fecha_publicacion="20040225" fecha_vigencia="20040226">
          <p class="seccion">Sección 1.ª Clases y características de los planes de pensiones</p>
        </version>
