      <bloque id="ci-4" tipo="encabezado" titulo="CAPÍTULO I">
        <version id_norma="BOE-A-2004-3453" fecha_publicacion="20040225" fecha_vigencia="20040226">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">Requisitos y actividad de las entidades gestoras y depositarias</p>
