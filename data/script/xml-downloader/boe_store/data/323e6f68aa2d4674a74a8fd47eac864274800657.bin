      <bloque id="a1-3" tipo="precepto" titulo="Artículos 18 a 31">
        <version id_norma="BOE-A-2017-4394" fecha_publicacion="20170401" fecha_vigencia="20170402">
          <p class="articulo">Artículos 18 a 31.</p>
          <p class="parrafo">
