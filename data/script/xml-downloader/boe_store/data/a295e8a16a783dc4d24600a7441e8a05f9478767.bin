        <version id_norma="BOE-A-2008-823" fecha_publicacion="20080117" fecha_vigencia="20080217">
          <p class="capitulo_num">CAPÍTULO II</p>
          <p class="capitulo_tit">Controles obligatorios en la explotación</p>
        </version>
