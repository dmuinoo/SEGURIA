      <bloque id="a1-2" tipo="precepto" titulo="Artículos 10 a 23">
        <version id_norma="BOE-A-2022-4975" fecha_publicacion="20220330" fecha_vigencia="20220331">
          <p class="articulo">Artículos 10 a 23.</p>
