      <bloque id="ci" tipo="encabezado" titulo="CAPÍTULO I">
        <version id_norma="BOE-A-2003-4932" fecha_publicacion="20030220" fecha_vigencia="20030312">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">El estudio y la docencia</p>
        </version>
