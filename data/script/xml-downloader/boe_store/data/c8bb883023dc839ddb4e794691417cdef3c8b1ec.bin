      <bloque id="ci" tipo="encabezado" titulo="CAPÍTULO I">
        <version id_norma="BOE-A-2006-10084" fecha_publicacion="20060421" fecha_vigencia="20060721">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">Competencias de la Generalitat</p>
