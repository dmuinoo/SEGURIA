      <bloque id="ani" tipo="encabezado" titulo="ANEXO I">
        <version id_norma="BOE-A-2013-10580" fecha_publicacion="20131011" fecha_vigencia="20131211">
          <p class="anexo_num">ANEXO I</p>
          <p class="anexo_tit">Parámetros indicadores de calidad del agua</p>
          <table border="0" class="tabla_ancha" summary="Tabla de datos">
            <tbody>
              <tr>
                <th>
                  <p class="cabeza_tabla">Parámetro</p>
                </th>
                <th>
                  <p class="cabeza_tabla">Valor paramétrico</p>
                </th>
                <th>
                  <p class="cabeza_tabla">Unidades</p>
                </th>
                <th>
                  <p class="cabeza_tabla">Notas</p>
                </th>
                <th>
                  <p class="cabeza_tabla">Condiciones para el cierre del vaso</p>
