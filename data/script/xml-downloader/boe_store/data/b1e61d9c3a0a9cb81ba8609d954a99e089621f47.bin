        <version id_norma="BOE-A-2019-5089" fecha_publicacion="20190406" fecha_vigencia="20190407">
          <p class="anexo_num">ITC-BT-40</p>
          <p class="anexo_tit">
            <strong>INSTALACIONES GENERADORAS DE BAJA TENSIÓN</strong>
          </p>
