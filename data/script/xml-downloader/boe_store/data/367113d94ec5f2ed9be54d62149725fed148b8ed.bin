      <bloque id="sprimera-3" tipo="encabezado" titulo="Sección primera">
        <version id_norma="BOE-A-2011-13896" fecha_publicacion="20110729" fecha_vigencia="20110730">
          <p class="seccion">Sección primera. Patrimonio</p>
        </version>
