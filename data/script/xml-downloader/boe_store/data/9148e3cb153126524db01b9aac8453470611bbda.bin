      <bloque id="s1-2" tipo="encabezado" titulo="Sección 1">
        <version id_norma="BOE-A-2015-7802" fecha_publicacion="20150626" fecha_vigencia="20150926">
          <p class="seccion">Sección 1.ª Vivienda deshabitada, infravivienda y vivienda sobreocupada</p>
