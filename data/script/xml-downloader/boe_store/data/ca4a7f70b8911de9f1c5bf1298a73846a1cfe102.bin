      <bloque id="cii-6" tipo="encabezado" titulo="CAPÍTULO II">
        <version id_norma="BOE-A-2012-11414" fecha_publicacion="20120723" fecha_vigencia="20120812">
          <p class="capitulo_num">CAPÍTULO II</p>
          <p class="capitulo_tit">De los instrumentos de fomento forestal</p>
        </version>
