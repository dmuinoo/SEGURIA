        <version id_norma="BOE-A-2009-11565" fecha_publicacion="20090701" fecha_vigencia="20090702">
          <p class="titulo_num">TÍTULO PRELIMINAR</p>
          <p class="titulo_tit">Disposiciones generales</p>
        </version>
