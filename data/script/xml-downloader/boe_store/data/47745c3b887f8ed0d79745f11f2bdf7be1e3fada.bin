                <p class="cuerpo_tabla_izq">Promociones en curso</p>
              </td>
              <td>
                <p class="cuerpo_tabla_centro">65</p>
              </td>
            </tr>
          </table>
        </version>
        <version id_norma="BOE-A-2012-11247" fecha_publicacion="20120831" fecha_vigencia="20120831">
