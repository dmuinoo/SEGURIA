            <tr>
              <td>
                <p class="cabeza_tabla">Clase de activo</p>
              </td>
              <td>
                <p class="cabeza_tabla">Dudoso</p>
                <p class="cabeza_tabla">–</p>
                <p class="cabeza_tabla">Porcentaje</p>
              </td>
              <td>
                <p class="cabeza_tabla">Subestándar</p>
                <p class="cabeza_tabla">–</p>
                <p class="cabeza_tabla">Porcentaje</p>
              </td>
            </tr>
