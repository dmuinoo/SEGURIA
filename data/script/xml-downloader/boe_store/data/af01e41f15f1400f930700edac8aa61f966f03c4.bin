        <version id_norma="BOE-A-2025-1" fecha_publicacion="20241209" fecha_vigencia="20241210">
          <p class="titulo_num">TÍTULO V</p>
          <p class="titulo_tit">Medidas en materia de hacienda, economía, administración pública y administración electrónica</p>
