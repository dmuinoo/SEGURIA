        </version>
      </bloque>
      <bloque id="s1" tipo="encabezado" titulo="Sección 1">
        <version id_norma="BOE-A-2013-2607" fecha_publicacion="20130309" fecha_vigencia="20130310">
          <p class="seccion">Sección 1.ª</p>
        </version>
