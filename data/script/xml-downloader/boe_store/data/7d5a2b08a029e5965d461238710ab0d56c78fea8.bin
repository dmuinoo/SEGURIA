        <version id_norma="BOE-A-2014-6432" fecha_publicacion="20140618" fecha_vigencia="20140619">
          <p class="anexo_num">ANEXO</p>
          <p class="anexo_tit">Plan Sectorial de Turismo de Naturaleza y Biodiversidad 2014-2020</p>
        </version>
