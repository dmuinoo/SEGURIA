              <tr class="row_column_4">
                <td>
                  <p class="cuerpo_tabla_centro">0.5</p>
                </td>
                <td>
                  <p class="cuerpo_tabla_centro">± 0,5 %</p>
                </td>
              </tr>
              <tr class="row_column_4">
                <td>
                  <p class="cuerpo_tabla_centro">1</p>
                </td>
