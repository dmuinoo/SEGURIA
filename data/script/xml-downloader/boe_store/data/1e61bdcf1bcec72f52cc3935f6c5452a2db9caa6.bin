      <bloque id="ax-10" tipo="encabezado" titulo="ANEXO XIX">
        <version id_norma="BOE-A-2020-2573" fecha_publicacion="20200224" fecha_vigencia="20201024">
          <p class="anexo_num">ANEXO XIX</p>
          <p class="anexo_tit">Solicitudes de verificación</p>
          <p class="centro_redonda">SOLICITUD DE VERIFICACIÓN</p>
          <p class="centro_redonda">INSTRUMENTO:</p>
