              <tr class="row_column_4">
                <td>
                  <p class="cuerpo_tabla_centro">De 0,2 L a 0,4 L</p>
                </td>
                <td>
                  <p class="cuerpo_tabla_centro">± 0,4 %</p>
                </td>
              </tr>
              <tr class="row_column_4">
                <td>
                  <p class="cuerpo_tabla_centro">De 0,1 L a 0,2 L</p>
                </td>
                <td>
                  <p class="cuerpo_tabla_centro">± 2 % de <em>CMM</em></p>
                </td>
              </tr>
              <tr class="row_column_4">
                <td>
                  <p class="cuerpo_tabla_centro">Menores de 0,1 L</p>
                </td>
                <td>
                  <p class="cuerpo_tabla_centro">± 0,2 %</p>
                </td>
              </tr>
