      <bloque id="te" tipo="encabezado" titulo="TEXTO">
        <version id_norma="BOE-A-2023-14052" fecha_publicacion="20230529" fecha_vigencia="20230530">
          <p class="anexo">TEXTO REFUNDIDO DE LA LEY DE HACIENDA DE LA COMUNIDAD AUTÓNOMA DE ARAGÓN</p>
        </version>
