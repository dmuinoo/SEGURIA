      <bloque id="ci" tipo="encabezado" titulo="CAPÍTULO I">
        <version id_norma="BOE-A-2004-18908" fecha_publicacion="20041105" fecha_vigencia="20041106">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">Del acceso a la actividad aseguradora</p>
        </version>
