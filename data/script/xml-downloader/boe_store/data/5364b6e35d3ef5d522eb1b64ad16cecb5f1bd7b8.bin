      <bloque id="ai" tipo="encabezado" titulo="ANEXO I">
        <version id_norma="BOE-A-2019-14635" fecha_publicacion="20191012" fecha_vigencia="20191012">
          <p class="anexo_num">ANEXO I</p>
          <p class="anexo_tit">Ingresos tributarios previos a la cesión a las AATT. Art. 2 año 2019</p>
          <table class="tabla_b_sica">
            <colgroup>
              <col class="row_column_3"/>
              <col class="row_column_4"/>
            </colgroup>
            <thead>
