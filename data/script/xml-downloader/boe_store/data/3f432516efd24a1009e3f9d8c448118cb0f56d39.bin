        <version id_norma="BOE-A-2015-7662" fecha_publicacion="20150709" fecha_vigencia="20150710">
          <p class="parrafo_2">Madrid, 3 de julio de 2015.</p>
          <p class="firma_ministro">El Ministro de Educación, Cultura y Deporte,</p>
          <p class="firma_ministro">Íñigo Méndez de Vigo y Montojo.</p>
        </version>
      </bloque>
