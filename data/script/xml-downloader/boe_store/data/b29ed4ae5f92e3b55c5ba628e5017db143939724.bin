      <bloque id="cunico-2" tipo="encabezado" titulo="CAPÍTULO ÚNICO">
        <version id_norma="BOE-A-2011-17887" fecha_publicacion="20111116" fecha_vigencia="20111216">
          <p class="capitulo_num">CAPÍTULO ÚNICO</p>
          <p class="capitulo_tit">Plataforma de Contratación del Estado</p>
        </version>
