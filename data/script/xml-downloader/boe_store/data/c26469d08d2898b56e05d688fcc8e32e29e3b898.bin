      <bloque id="ma-7" tipo="encabezado" titulo="MIE APQ-7">
        <version id_norma="BOE-A-2017-8755" fecha_publicacion="20170725" fecha_vigencia="20171025">
          <p class="titulo">Instrucción técnica complementaria MIE APQ-7 «Almacenamiento de liquidos tóxicos en recipientes fijos»</p>
        </version>
