      <bloque id="ci-5" tipo="encabezado" titulo="CAPÍTULO I">
        <version id_norma="BOE-A-2008-13685" fecha_publicacion="20080623" fecha_vigencia="20080713">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">Empresas forestales</p>
