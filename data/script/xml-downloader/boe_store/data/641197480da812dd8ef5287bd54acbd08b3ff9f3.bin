            <tr>
              <td>
                <p class="cuerpo_tabla_izq">Driving_license_info</p>
              </td>
              <td>
                <p class="cuerpo_tabla_centro">0521</p>
              </td>
              <td>
                <p class="cuerpo_tabla_izq">Número, país de expedición, fecha de validez,...</p>
              </td>
            </tr>
            <tr>
              <td>
                <p class="cuerpo_tabla_izq">Events_data</p>
              </td>
              <td>
                <p class="cuerpo_tabla_centro">0502</p>
              </td>
              <td>
                <p class="cuerpo_tabla_izq">Registro de incidentes.</p>
              </td>
            </tr>
            <tr>
              <td>
                <p class="cuerpo_tabla_izq">Faults_data</p>
              </td>
              <td>
                <p class="cuerpo_tabla_centro">0503</p>
              </td>
              <td>
                <p class="cuerpo_tabla_izq">Registro de fallos.</p>
              </td>
            </tr>
            <tr>
              <td>
                <p class="cuerpo_tabla_izq">Driver_Activity_data</p>
              </td>
              <td>
                <p class="cuerpo_tabla_centro">0504</p>
              </td>
              <td>
