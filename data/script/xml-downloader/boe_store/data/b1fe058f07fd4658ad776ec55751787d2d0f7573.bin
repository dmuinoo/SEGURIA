        <version id_norma="BOE-A-2015-1952" fecha_publicacion="20150212" fecha_vigencia="20150312">
          <p class="capitulo_num">CAPÍTULO III</p>
          <p class="capitulo_tit">Gestión y reintegro</p>
        </version>
