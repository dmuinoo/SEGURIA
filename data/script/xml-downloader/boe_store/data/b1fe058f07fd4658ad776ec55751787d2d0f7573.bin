      <bloque id="s1-7" tipo="encabezado" titulo="Sección 1">
        <version id_norma="BOE-A-2015-1952" fecha_publicacion="20150212" fecha_vigencia="20150312">
          <p class="seccion">Sección 1.ª Cuentas anuales</p>
        </version>
