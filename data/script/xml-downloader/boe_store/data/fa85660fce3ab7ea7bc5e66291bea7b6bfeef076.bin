        <version id_norma="BOE-A-2020-11193" fecha_publicacion="20200925" fecha_vigencia="20201015">
          <p class="anexo">DIRECTRIZ BÁSICA DE PLANIFICACIÓN DE PROTECCIÓN CIVIL ANTE EMERGENCIAS AERONÁUTICAS DE AVIACIÓN CIVIL</p>
          <p class="centro_redonda">ÍNDICE</p>
          <p class="parrafo_2">1. Disposiciones generales.</p>
          <p class="parrafo_2">1.1 Objeto.</p>
          <p class="parrafo">1.2 Alcance.</p>
          <p class="parrafo">1.3 Definiciones.</p>
