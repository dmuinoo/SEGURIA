      <bloque id="ci-8" tipo="encabezado" titulo="CAPÍTULO I">
        <version id_norma="BOE-A-2014-655" fecha_publicacion="20131130" fecha_vigencia="20140228">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">Disposiciones específicas para las actividades itinerantes</p>
        </version>
        <version id_norma="BOE-A-2019-3914" fecha_publicacion="20190216" fecha_vigencia="20190416">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">Disposiciones específicas para las actividades itinerantes</p>
          <blockquote>
            <p class="nota_pie">Se modifica por el art. 15 de la Ley 6/2019, de 8 de febrero. <a class="refPost">Ref. BOE-A-2019-3914</a></p>
          </blockquote>
