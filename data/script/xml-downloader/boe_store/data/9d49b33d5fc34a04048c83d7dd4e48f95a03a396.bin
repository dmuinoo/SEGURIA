        <version id_norma="BOE-A-2010-4175" fecha_publicacion="20100313" fecha_vigencia="20100314">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">Disposiciones generales</p>
        </version>
