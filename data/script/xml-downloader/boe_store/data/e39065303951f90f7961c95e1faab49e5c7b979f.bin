      <bloque id="se-2" tipo="encabezado" titulo="Sección 2">
        <version id_norma="BOE-A-2019-4485" fecha_publicacion="20190327" fecha_vigencia="20190416">
          <p class="seccion">Sección 2.ª Enseñanza de capacitación</p>
