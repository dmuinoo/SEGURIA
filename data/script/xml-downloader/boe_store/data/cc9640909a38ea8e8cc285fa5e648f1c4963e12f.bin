        <version id_norma="BOE-A-2006-15113" fecha_publicacion="20060801" fecha_vigencia="20070101">
          <p class="titulo_num">TÍTULO PRELIMINAR</p>
          <p class="titulo_tit">Disposiciones generales</p>
        </version>
