        <version id_norma="BOE-A-2014-2223" fecha_publicacion="20140301" fecha_vigencia="20140302">
          <p class="anexo">CONTENIDO NORMATIVO DEL PLAN HIDROLÓGICO DE LA PARTE ESPAÑOLA DE LA DEMARCACIÓN HIDROGRÁFICA DEL EBRO Y ANEXOS</p>
        </version>
