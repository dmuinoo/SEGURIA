      <bloque id="s1-2" tipo="encabezado" titulo="SECCION 1">
        <version id_norma="BOE-A-2004-21908" fecha_publicacion="20041231" fecha_vigencia="20050101">
          <p class="seccion">Sección 1.ª Licencias de empresa ferroviaria</p>
