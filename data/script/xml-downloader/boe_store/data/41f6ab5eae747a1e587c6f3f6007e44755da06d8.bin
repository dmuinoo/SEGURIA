      <bloque id="s5" tipo="encabezado" titulo="Sección 5">
        <version id_norma="BOE-A-2012-7445" fecha_publicacion="20120512" fecha_vigencia="20120513">
          <p class="seccion">Sección 5.ª Impuesto sobre transmisiones patrimoniales y actos jurídicos documentados</p>
        </version>
