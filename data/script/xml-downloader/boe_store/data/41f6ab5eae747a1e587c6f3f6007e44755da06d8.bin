      <bloque id="s6" tipo="encabezado" titulo="Sección 6">
        <version id_norma="BOE-A-2012-7445" fecha_publicacion="20120512" fecha_vigencia="20120513">
          <p class="seccion">Sección 6.ª Tasa fiscal sobre los juegos de suerte, envite o azar</p>
        </version>
