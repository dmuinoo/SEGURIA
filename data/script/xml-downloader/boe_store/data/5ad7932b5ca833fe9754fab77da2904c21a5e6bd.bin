                <td class="cuerpo_tabla_izq">desde 5 760 kg hasta 100 000 kg exclusive</td>
                <td class="cuerpo_tabla_centro">180 m</td>
              </tr>
              <tr>
                <td class="cuerpo_tabla_izq">de 100 000 kg o más</td>
                <td class="cuerpo_tabla_centro">250 m</td>
              </tr>
