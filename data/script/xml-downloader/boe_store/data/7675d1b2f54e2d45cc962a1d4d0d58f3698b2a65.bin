        <version id_norma="BOE-A-2003-7253" fecha_publicacion="20030409" fecha_vigencia="20031009">
          <p class="capitulo_num">CAPÍTULO III</p>
          <p class="capitulo_tit">Condicionantes y advertencias</p>
        </version>
