      <bloque id="anix" tipo="encabezado" titulo="ANEXO IX">
        <version id_norma="BOE-A-2013-1969" fecha_publicacion="20130222" fecha_vigencia="20130223">
          <p class="anexo_num">ANEXO IX</p>
          <p class="anexo_tit">Modelo orientativo de la declaración responsable de la empresa conservadora de ascensores, en virtud del apartado 7</p>
