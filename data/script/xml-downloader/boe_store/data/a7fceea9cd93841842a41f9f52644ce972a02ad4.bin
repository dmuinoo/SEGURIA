        </version>
      </bloque>
      <bloque id="cii" tipo="encabezado" titulo="CAPÍTULO II">
        <version id_norma="BOE-A-2012-9010" fecha_publicacion="20120628" fecha_vigencia="20120928">
          <p class="capitulo_num">CAPÍTULO II</p>
          <p class="capitulo_tit">Controles de dopaje</p>
        </version>
