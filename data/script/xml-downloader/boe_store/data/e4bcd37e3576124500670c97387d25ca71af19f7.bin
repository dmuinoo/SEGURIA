        <version id_norma="BOE-A-2010-10707" fecha_publicacion="20100706" fecha_vigencia="20100906">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">Disposiciones generales</p>
        </version>
