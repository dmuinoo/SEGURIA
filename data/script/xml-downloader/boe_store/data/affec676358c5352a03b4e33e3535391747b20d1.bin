      <bloque id="ci-2" tipo="encabezado" titulo="CAPÍTULO II">
        <version id_norma="BOE-A-2019-7221" fecha_publicacion="20190409" fecha_vigencia="20190509">
          <p class="capitulo_num">CAPÍTULO II</p>
          <p class="capitulo_tit">Medidas de simplificación administrativa y de mejora en materia presupuestaria y de gestión económica</p>
        </version>
