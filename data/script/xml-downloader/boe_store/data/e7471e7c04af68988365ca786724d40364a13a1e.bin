      <bloque id="civ-2" tipo="encabezado" fecha_caducidad="20220929" titulo="CAPÍTULO IV">
        <version id_norma="BOE-A-2015-4607" fecha_publicacion="20150428" fecha_vigencia="20150429">
          <p class="capitulo_num">CAPÍTULO IV</p>
          <p class="capitulo_tit">Sobre los promotores y los proyectos</p>
        </version>
      </bloque>
      <bloque id="s1" tipo="encabezado" fecha_caducidad="20220929" titulo="Sección 1">
        <version id_norma="BOE-A-2015-4607" fecha_publicacion="20150428" fecha_vigencia="20150429">
