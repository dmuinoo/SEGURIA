      <bloque id="ci" tipo="encabezado" titulo="CAPÍTULO I">
        <version id_norma="BOE-A-2019-3997" fecha_publicacion="20181228" fecha_vigencia="20190101">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">Tributos cedidos</p>
