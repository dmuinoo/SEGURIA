        <version id_norma="BOE-A-1997-25340" fecha_publicacion="19971128" fecha_vigencia="19971129">
          <p class="titulo_num">TÍTULO V</p>
          <p class="titulo_tit">Gestión económica y técnica del sistema eléctrico</p>
