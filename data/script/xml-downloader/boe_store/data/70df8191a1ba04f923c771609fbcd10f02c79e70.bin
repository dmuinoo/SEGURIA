      <bloque id="s1" tipo="encabezado" fecha_caducidad="20151223" titulo="Sección 1">
        <version id_norma="BOE-A-2009-16839" fecha_publicacion="20091024" fecha_vigencia="20091025">
          <p class="seccion">Sección 1.ª Disposiciones generales</p>
        </version>
