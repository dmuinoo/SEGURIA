      <bloque id="se-2" tipo="encabezado" titulo="Sección 2">
        <version id_norma="BOE-A-2018-16345" fecha_publicacion="20181102" fecha_vigencia="20190102">
          <p class="seccion">Sección 2.ª Clases de socios</p>
        </version>
