      <bloque id="se-17" tipo="encabezado" titulo="Sección 1">
        <version id_norma="BOE-A-2018-16345" fecha_publicacion="20181102" fecha_vigencia="20190102">
          <p class="seccion">Sección 1.ª Régimen sancionador</p>
