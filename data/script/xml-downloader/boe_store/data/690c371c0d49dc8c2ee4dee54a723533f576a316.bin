      <bloque id="s1-2" tipo="encabezado" titulo="Sección 1">
        <version id_norma="BOE-A-2002-14082" fecha_publicacion="20020704" fecha_vigencia="20020705">
          <p class="seccion">Sección 1.<sup>a </sup>Recursos</p>
        </version>
