      <bloque id="s7" tipo="encabezado" titulo="SECCIÓN 7">
        <version id_norma="BOE-A-1998-27047" fecha_publicacion="19981125" fecha_vigencia="19990101">
          <p class="seccion">Sección 7.ª Transformación, escisión, fusión y agrupación</p>
