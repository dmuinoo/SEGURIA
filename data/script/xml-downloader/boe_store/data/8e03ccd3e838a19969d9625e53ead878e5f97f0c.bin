      <bloque id="s3" tipo="encabezado" titulo="Sección 3">
        <version id_norma="BOE-A-2022-10557" fecha_publicacion="20220626" fecha_vigencia="20220627">
          <p class="seccion">Sección 3.ª Otras medidas sociales y laborales</p>
        </version>
