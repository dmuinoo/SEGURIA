      <bloque id="estatuto" tipo="encabezado" titulo="ESTATUTO">
        <version id_norma="BOE-A-2015-12889" fecha_publicacion="20151128" fecha_vigencia="20151129">
          <p class="anexo">ESTATUTO DE LA AGENCIA ESTATAL DE INVESTIGACIÓN</p>
        </version>
