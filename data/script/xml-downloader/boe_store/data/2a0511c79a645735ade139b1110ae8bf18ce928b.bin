      <bloque id="ci-4" tipo="encabezado" titulo="CAPÍTULO I">
        <version id_norma="BOE-A-1997-20259" fecha_publicacion="19970923" fecha_vigencia="19970924">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">Condiciones para el ascenso</p>
        </version>
