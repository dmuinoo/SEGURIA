        <version id_norma="BOE-A-2014-10059" fecha_publicacion="20141004" fecha_vigencia="20141004">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">Hibernación de las instalaciones</p>
        </version>
