      <bloque id="a23" tipo="precepto" titulo="Artículo 23">
        <version id_norma="BOE-A-2008-821" fecha_publicacion="20080117" fecha_vigencia="20080118">
          <p class="articulo">Artículo 23. Carga lectiva superada.</p>
