      <bloque id="ci" tipo="encabezado" titulo="CAPÍTULO I">
        <version id_norma="BOE-A-2006-759" fecha_publicacion="20051231" fecha_vigencia="20060120">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">Sujetos artesanos</p>
        </version>
        <version id_norma="BOE-A-2021-90434" fecha_publicacion="20211217" fecha_vigencia="20211218">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">Personas artesanas</p>
          <blockquote>
            <p class="nota_pie">Se modifica por el art. 47.3 del Decreto-ley 26/2021, de 14 de diciembre. <a class="refPost">Ref. BOJA-b-2021-90434#a4-9</a></p>
