      <bloque id="s5" tipo="encabezado" titulo="Sección 5">
        <version id_norma="BOE-A-2007-22439" fecha_publicacion="20071229" fecha_vigencia="20071230">
          <p class="seccion">Sección 5.ª De la Exhibición</p>
