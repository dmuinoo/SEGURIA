      <bloque id="anii" tipo="encabezado" titulo="ANEXO II">
        <version id_norma="BOE-A-2011-17174" fecha_publicacion="20111101" fecha_vigencia="20111116">
          <p class="anexo_num">ANEXO II</p>
          <p class="anexo_tit">Variedades excluidas de acuerdo con el artículo 15</p>
          <p class="parrafo_2">Albariño.</p>
        </version>
