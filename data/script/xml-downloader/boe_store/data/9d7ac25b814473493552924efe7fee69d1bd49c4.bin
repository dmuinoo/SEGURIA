      <bloque id="cvii" tipo="encabezado" titulo="CAPÍTULO VII">
        <version id_norma="BOE-A-1999-6940" fecha_publicacion="19981230" fecha_vigencia="19990228">
          <p class="capitulo_num">CAPÍTULO VII</p>
          <p class="capitulo_tit">De la modificación de Estatutos</p>
        </version>
