      <bloque id="instrucciontecnicacomplementaria-2" tipo="encabezado" titulo="INSTRUCCIÓN TÉCNICA COMPLEMENTARIA ITC EP-2">
        <version id_norma="BOE-A-2009-1964" fecha_publicacion="20090205" fecha_vigencia="20090805">
          <p class="anexo_num">INSTRUCCIÓN TÉCNICA COMPLEMENTARIA ITC EP-2</p>
          <p class="anexo_tit">Centrales generadoras de energía eléctrica</p>
        </version>
