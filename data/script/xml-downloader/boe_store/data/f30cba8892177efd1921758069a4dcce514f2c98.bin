              <tr class="row_column_5">
                <td>
                  <p class="cabeza_tabla">Elemento</p>
                </td>
                <td>
                  <p class="cabeza_tabla">Contaminantes</p>
                </td>
                <td>
                  <p class="cabeza_tabla">Serie cronológica</p>
                </td>
                <td>
                  <p class="cabeza_tabla">Fechas de información</p>
                </td>
              </tr>
            </thead>
            <tbody>
              <tr class="row_column_6">
                <td rowspan="2">
