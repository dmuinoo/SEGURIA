      <bloque id="ai" tipo="encabezado" titulo="ANEXO I">
        <version id_norma="BOE-A-2020-6745" fecha_publicacion="20200626" fecha_vigencia="20200701">
          <p class="anexo_num">ANEXO I</p>
          <p class="anexo_tit">Cuestionario sobre el estado de salud para la práctica del buceo recreativo</p>
          <p class="imagen">
            <img class="frame-1" alt="1" src="/datos/imagenes/disp/2020/177/06745_6395.png" height="2587" width="2126"/>
