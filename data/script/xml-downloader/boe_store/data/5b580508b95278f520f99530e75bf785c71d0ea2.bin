        <version id_norma="BOE-A-2001-428" fecha_publicacion="20001205" fecha_vigencia="20001225">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">Ámbito de aplicación</p>
        </version>
