      <bloque id="ciii" tipo="encabezado" titulo="CAPÍTULO III">
        <version id_norma="BOE-A-2007-14798" fecha_publicacion="20070803" fecha_vigencia="20070804">
          <p class="capitulo_num">CAPÍTULO III</p>
          <p class="capitulo_tit">Procedimiento y requisitos de los consumidores para la contratación del servicio</p>
        </version>
