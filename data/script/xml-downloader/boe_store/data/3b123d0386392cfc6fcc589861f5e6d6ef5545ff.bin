              <td>
                <p class="cuerpo_tabla_centro">1</p>
              </td>
              <td>
                <p class="cuerpo_tabla_der">3</p>
              </td>
            </tr>
            <tr>
              <td>
                <p class="cuerpo_tabla_centro">2-5</p>
              </td>
              <td>
                <p class="cuerpo_tabla_der">8</p>
              </td>
            </tr>
            <tr>
              <td>
                <p class="cuerpo_tabla_centro">6-15</p>
              </td>
              <td>
                <p class="cuerpo_tabla_der">10</p>
              </td>
            </tr>
            <tr>
              <td>
                <p class="cuerpo_tabla_centro">16-25</p>
              </td>
