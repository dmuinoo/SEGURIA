      <bloque id="ci-3" tipo="encabezado" titulo="CAPÍTULO I">
        <version id_norma="BOE-A-2018-13593" fecha_publicacion="20181006" fecha_vigencia="20181007">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">Integración de renovables</p>
        </version>
