      <bloque id="cii" tipo="encabezado" titulo="CAPÍTULO II">
        <version id_norma="BOE-A-2003-14412" fecha_publicacion="20030630" fecha_vigencia="20030701">
          <p class="capitulo_num">CAPÍTULO II</p>
          <p class="capitulo_tit">Condiciones para la constitución</p>
        </version>
