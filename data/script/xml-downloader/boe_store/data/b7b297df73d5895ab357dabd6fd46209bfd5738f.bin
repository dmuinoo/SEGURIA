      <bloque id="ci" tipo="encabezado" titulo="CAPÍTULO I">
        <version id_norma="BOE-A-2013-6584" fecha_publicacion="20130531" fecha_vigencia="20130601">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">Renovación urbana</p>
        </version>
