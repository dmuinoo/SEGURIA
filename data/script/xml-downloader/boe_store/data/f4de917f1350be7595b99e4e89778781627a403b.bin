      <bloque id="firma" tipo="firma">
        <version id_norma="BOE-A-2015-1116" fecha_publicacion="20150105" fecha_vigencia="20150125">
          <p class="parrafo_2">Santa Cruz de Tenerife, 26 de diciembre de 2014.</p>
          <p class="firma_ministro">El Presidente,</p>
          <p class="firma_ministro">Paulino Rivero Baute.</p>
        </version>
