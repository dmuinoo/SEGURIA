      <bloque id="civ" tipo="encabezado" titulo="CAPITULO IV">
        <version id_norma="BOE-A-2009-10900" fecha_publicacion="20090702" fecha_vigencia="20091002">
          <p class="capitulo_num">CAPITULO IV</p>
          <p class="capitulo_tit">De la documentación, registro y control</p>
