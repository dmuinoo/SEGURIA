      <bloque id="tiv" tipo="encabezado" titulo="TÍTULO IV">
        <version id_norma="BOE-A-2013-13645" fecha_publicacion="20131227" fecha_vigencia="20131228">
          <p class="titulo_num">TÍTULO IV</p>
          <p class="titulo_tit">Producción de energía eléctrica</p>
