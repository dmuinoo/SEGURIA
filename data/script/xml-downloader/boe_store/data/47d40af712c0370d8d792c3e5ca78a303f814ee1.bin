        <version id_norma="BOE-A-2013-13645" fecha_publicacion="20131227" fecha_vigencia="20131228">
          <p class="titulo_num">TÍTULO IX</p>
          <p class="titulo_tit">Autorizaciones, expropiación y servidumbres</p>
        </version>
