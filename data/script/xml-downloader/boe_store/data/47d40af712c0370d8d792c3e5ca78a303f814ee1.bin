      <bloque id="ci" tipo="encabezado" titulo="CAPÍTULO I">
        <version id_norma="BOE-A-2013-13645" fecha_publicacion="20131227" fecha_vigencia="20131228">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">Suministro a los usuarios y gestión de la demanda eléctrica</p>
