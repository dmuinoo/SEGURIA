      <bloque id="fi" tipo="firma" titulo="[firma]">
        <version id_norma="BOE-A-2018-7511" fecha_publicacion="20180606" fecha_vigencia="20190102">
          <p class="parrafo_2">Madrid, 25 de mayo de 2018.–El Ministro de Fomento, Iñigo Joaquín de la Serna Hernáiz.</p>
        </version>
