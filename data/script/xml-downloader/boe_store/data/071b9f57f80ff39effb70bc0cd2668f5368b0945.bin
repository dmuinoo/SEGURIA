      <bloque id="civ" tipo="encabezado" titulo="CAPÍTULO IV">
        <version id_norma="BOE-A-2009-18178" fecha_publicacion="20091030" fecha_vigencia="20091031">
          <p class="capitulo_num">CAPÍTULO IV</p>
          <p class="capitulo_tit">Salud laboral</p>
        </version>
