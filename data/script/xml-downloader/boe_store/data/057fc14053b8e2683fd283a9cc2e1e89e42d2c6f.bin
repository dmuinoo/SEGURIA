        <version id_norma="BOE-A-2024-519" fecha_publicacion="20240110" fecha_vigencia="20240110">
          <p class="parrafo_2">Dado en Madrid, el 9 de enero de 2024.</p>
          <p class="firma_rey">FELIPE R.</p>
          <p class="firma_ministro">El Presidente del Gobierno,</p>
          <p class="firma_ministro">PEDRO SÁNCHEZ PÉREZ-CASTEJÓN</p>
        </version>
      </bloque>
