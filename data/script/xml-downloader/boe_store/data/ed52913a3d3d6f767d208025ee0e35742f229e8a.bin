      <bloque id="ci-3" tipo="encabezado" titulo="CAPÍTULO I">
        <version id_norma="BOE-A-2009-11125" fecha_publicacion="20090609" fecha_vigencia="20090809">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">Inspección</p>
        </version>
