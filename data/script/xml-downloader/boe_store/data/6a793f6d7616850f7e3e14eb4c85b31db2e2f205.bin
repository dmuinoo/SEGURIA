      <bloque id="ci-3" tipo="encabezado" titulo="CAPÍTULO I">
        <version id_norma="BOE-A-2018-8950" fecha_publicacion="20180608" fecha_vigencia="20180708">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">Política turística</p>
