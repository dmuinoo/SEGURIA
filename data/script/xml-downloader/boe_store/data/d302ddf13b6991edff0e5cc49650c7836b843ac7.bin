      <bloque id="an" tipo="encabezado" titulo="ANEXO">
        <version id_norma="BOE-A-1999-10738" fecha_publicacion="19990513" fecha_vigencia="19990514">
          <p class="anexo_num">ANEXO</p>
          <p class="anexo_tit">Estatutos del Instituto de Crédito Oficial</p>
        </version>
