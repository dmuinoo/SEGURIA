      <bloque id="ci" tipo="encabezado" titulo="CAPÍTULO I">
        <version id_norma="BOE-A-2019-7220" fecha_publicacion="20190409" fecha_vigencia="20190410">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">Régimen competencial</p>
        </version>
