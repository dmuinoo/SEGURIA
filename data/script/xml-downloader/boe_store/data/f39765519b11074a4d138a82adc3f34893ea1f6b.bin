      <bloque id="cii" tipo="encabezado" titulo="CAPÍTULO II">
        <version id_norma="BOE-A-2011-2547" fecha_publicacion="20090522" fecha_vigencia="20100101">
          <p class="capitulo_num">CAPÍTULO II</p>
          <p class="capitulo_tit">Autorización ambiental integrada</p>
        </version>
