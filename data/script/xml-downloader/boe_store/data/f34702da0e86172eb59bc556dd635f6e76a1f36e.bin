      <bloque id="s1" tipo="encabezado" titulo="Sección 1">
        <version id_norma="BOE-A-2005-19005" fecha_publicacion="20051119" fecha_vigencia="20051120">
          <p class="seccion">Sección 1.ª Medidas horizontales</p>
        </version>
