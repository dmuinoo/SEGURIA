        <version id_norma="BOE-A-2005-19005" fecha_publicacion="20051119" fecha_vigencia="20051120">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">Mejora de los trámites para los ciudadanos y las empresas</p>
        </version>
