      <bloque id="s1" tipo="encabezado" titulo="Sección 1">
        <version id_norma="BOE-A-2011-6649" fecha_publicacion="20110325" fecha_vigencia="20110625">
          <p class="seccion">Sección 1.ª Convocatoria periódica</p>
