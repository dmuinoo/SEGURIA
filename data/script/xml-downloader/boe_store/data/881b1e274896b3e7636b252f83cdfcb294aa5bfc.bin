        <version id_norma="BOE-A-2001-20934" fecha_publicacion="20011109" fecha_vigencia="20011110">
          <p class="capitulo_num">CAPÍTULO II</p>
          <p class="capitulo_tit">De los órganos del Consejo General</p>
        </version>
