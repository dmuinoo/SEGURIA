      <bloque id="s2-7" tipo="encabezado" titulo="SECCIÓN 2">
        <version id_norma="BOE-A-1995-608" fecha_publicacion="19950110" fecha_vigencia="19950111">
          <p class="seccion">Sección 2.ª Personal de seguridad privada</p>
