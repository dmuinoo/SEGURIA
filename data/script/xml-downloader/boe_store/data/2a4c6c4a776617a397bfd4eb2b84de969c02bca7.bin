        <version id_norma="BOE-A-2018-5616" fecha_publicacion="20180425" fecha_vigencia="20180426">
          <p class="anexo">ESTATUTOS GENERALES DE LOS COLEGIOS OFICIALES DE INGENIEROS TÉCNICOS INDUSTRIALES Y PERITOS INDUSTRIALES DE ESPAÑA Y DE SU CONSEJO GENERAL</p>
        </version>
