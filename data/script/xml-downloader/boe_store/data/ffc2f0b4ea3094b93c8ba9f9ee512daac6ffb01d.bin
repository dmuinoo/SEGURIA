      <bloque id="ci-8" tipo="encabezado" titulo="CAPÍTULO I">
        <version id_norma="BOE-A-2011-17778" fecha_publicacion="20050330" fecha_vigencia="20050430">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">La Defensoría para la infancia y la adolescencia</p>
        </version>
      </bloque>
      <bloque id="a9-12" tipo="precepto" titulo="Artículos 96 a 99">
        <version fpub="20100316" id_norma="BOE-A-2010-4405" fecha_publicacion="20091231" fecha_vigencia="20100101">
          <p class="articulo">Artículos 96 a 99.</p>
          <p class="parrafo">
            <strong>(Derogados).</strong>
          </p>
          <blockquote>
            <p class="nota_pie">Se derogan por el art. único de la Ley 3/2009, de 23 de diciembre. <a class="refPost">Ref. BOE-A-2010-4405</a></p>
          </blockquote>
