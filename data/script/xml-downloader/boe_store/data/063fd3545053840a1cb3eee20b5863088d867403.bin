      <bloque id="ai" tipo="encabezado" titulo="ANEXO I">
        <version id_norma="BOE-A-2017-3125" fecha_publicacion="20170324" fecha_vigencia="20170325">
          <p class="anexo_num">ANEXO I</p>
          <p class="anexo_tit">Declaración responsable sobre actividades preventivas y sobre la existencia de representación de los trabajadores en materia de prevención de riesgos laborales<sup>1</sup></p>
          <p class="imagen">
            <img alt="1" class="frame-1" src="/datos/imagenes/disp/2017/71/03125_6841.png"/>
          </p>
          <p class="imagen">
            <img alt="2" class="frame-2" src="/datos/imagenes/disp/2017/71/03125_6877.png"/>
          </p>
