      <bloque id="ci" tipo="encabezado" titulo="CAPÍTULO I">
        <version id_norma="BOE-A-2017-2466" fecha_publicacion="20170222" fecha_vigencia="20180101">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">Contratos con finalidad transmisora</p>
        </version>
