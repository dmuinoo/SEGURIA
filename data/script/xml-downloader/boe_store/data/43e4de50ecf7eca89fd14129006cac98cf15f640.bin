      <bloque id="cii-3" tipo="encabezado" titulo="CAPÍTULO II">
        <version id_norma="BOE-A-2013-8554" fecha_publicacion="20130803" fecha_vigencia="20140103">
          <p class="capitulo_num">CAPÍTULO II</p>
          <p class="capitulo_tit">Infracciones y sanciones</p>
