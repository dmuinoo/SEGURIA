        <version id_norma="BOE-A-2021-5137" fecha_publicacion="20210225" fecha_vigencia="20210317">
          <p class="titulo_num">TÍTULO PRELIMINAR</p>
          <p class="titulo_tit">Disposiciones y principios generales</p>
        </version>
