      <bloque id="ci-4" tipo="encabezado" titulo="CAPÍTULO I">
        <version id_norma="BOE-A-2003-20331" fecha_publicacion="20031105" fecha_vigencia="20040205">
          <p class="capitulo_num">CAPÍTULO I</p>
          <p class="capitulo_tit">Concepto y objeto social</p>
        </version>
