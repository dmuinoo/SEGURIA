      <bloque id="ciii" tipo="encabezado" titulo="CAPÍTULO III">
        <version id_norma="BOE-A-2003-20331" fecha_publicacion="20031105" fecha_vigencia="20040205">
          <p class="capitulo_num">CAPÍTULO III</p>
          <p class="capitulo_tit">Información, publicidad y contabilidad</p>
