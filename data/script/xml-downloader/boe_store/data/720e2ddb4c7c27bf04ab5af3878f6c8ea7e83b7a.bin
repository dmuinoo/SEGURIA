      <bloque id="s1-3" tipo="encabezado" titulo="Sección 1">
        <version id_norma="BOE-A-2014-9467" fecha_publicacion="20140917" fecha_vigencia="20140918">
          <p class="seccion">Sección 1.ª Deporte</p>
        </version>
