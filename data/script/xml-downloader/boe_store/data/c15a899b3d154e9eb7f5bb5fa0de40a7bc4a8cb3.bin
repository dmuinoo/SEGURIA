        <version id_norma="BOE-A-2012-4091" fecha_publicacion="20120324" fecha_vigencia="20120325">
          <p class="parrafo_2">Dado en Madrid, el 23 de marzo de 2012.</p>
          <p class="firma_rey">JUAN CARLOS R.</p>
          <p class="firma_ministro">El Presidente del Gobierno,</p>
          <p class="firma_ministro">MARIANO RAJOY BREY</p>
        </version>
      </bloque>
