      <bloque id="s1-5" tipo="encabezado" titulo="Sección 1">
        <version id_norma="BOE-A-2021-10669" fecha_publicacion="20210521" fecha_vigencia="20210522">
          <p class="seccion">Sección 1.ª Infracciones</p>
        </version>
