      <bloque id="s2" tipo="encabezado" titulo="Sección 2">
        <version id_norma="BOE-A-1999-2521" fecha_publicacion="19981231" fecha_vigencia="19990101">
          <p class="seccion">Sección 2.ª Medidas patrimoniales</p>
        </version>
